<!--
    FORMULÁRIO PARA ENVIO DE DADOS PRO DB 
    O NAME SE REFERE A UMA COLUMN DO BD
    MANTER ESSE PADRÃO PARA FACILITAR ENTENDIMENTO
-->

<head>
    <link rel="stylesheet" href="../css/style.css" type="text/css">
</head>

<form action="/fornecedorcadastrado" method="POST" enctype="multipart/form-data" style="padding: 1rem;" autocomplete="off" onsubmit="return alerta()" >
    <h1>Cadastro de fornecedor</h1>
    <p style="text-transform: uppercase;">▶ Caso não tenha a informação, favor inserir "n/a" !!!</p>
    <p style="text-transform: uppercase;">▶ Campos marcados com "*" são obrigatórios !!!</p>
    <hr></hr>
        <p>*Fornecedor final ou intermediário: </p>
        <div class="input-group mb-3">
        <div class="input-group-prepend">
            <label class="input-group-text" for="inputGroupSelect01">Tipo</label>
        </div>
        <select class="custom-select" id="inputGroupSelect01" name="fornec_nivelfornecedor">
            <option>Escolher...</option>
            <option value='Final'>Final</option>
            <option value='Intermediário'>Intermediário</option>
        </select>
        </div>
    <hr></hr>
    <p>*Nome do fornecedor: </p><input type="text" name="fornec_fornecedornome">
    <hr></hr>
    <p>Razão social: </p><input type="text" name="fornec_razaosocial">
    <hr></hr>
    <p>Site: </p><input type="text" name="fornec_site">
    <hr></hr>
    <p>Telefone: </p><input type="text" name="fornec_telefone">
    <hr></hr>
    <p>Email: </p><input type="text" name="fornec_email">
    <hr></hr>
    <p>Upload de imagem ⇪: </p>
    <div class="input-group">
    <div class="custom-file">
    <input type="file" class="custom-file-input" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" name="fornec_foto">
    <label class="custom-file-label" for="inputGroupFile04"></label>
    </div>
    </div>
    <hr></hr>
    <div class="input-group-append" id="cadastrar">
    <button type="submit">Cadastrar!</button>
    </div>
</form>

<script>
    alerta = () => {
        alert('Cadastrado com sucesso!')
    }
</script>
